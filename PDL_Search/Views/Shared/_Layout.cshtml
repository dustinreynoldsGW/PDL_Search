<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="/Content/bootstrap-datepicker.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css"/>
    <script src="/Scripts/daterangepicker.min.js"></script>
</head>
<body>
    <div>
        <div class="pdl-background-color pdl-row">
            <h2 class="pdl-header">PDL Search</h2>
        </div>
    </div>
   
        <nav class="navbar navbar-expand-sm border-bottom box-shadow mb-3 navbar-background-color">
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" nav-link onmouseover="">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Search" asp-action="Search">Search</a>
                        </li>
                    </ul>
                </div>
            </div>
    </nav>
    <div class="container-fluid body-border body-border-padding">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div>
            &copy; 2022 - Gainwell - <a asp-area="" asp-controller="Home"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
